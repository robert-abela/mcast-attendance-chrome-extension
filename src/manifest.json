{
	"manifest_version": 2,
	"name": "MCAST Attendance Helper",
	"version": "0.1",
	"description": "Assists MCAST lectures with filling their attendance. (Robert Abela)",
	"icons": {
		"64": "icon64.png",
		"128": "icon128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"*://attendance.mcast.edu.mt/Home/Create*"
			],
			"js": [
				"jquery-3.2.1.min.js",
				"content-script.js"
			]
		}
	],
	"browser_action": {
		"default_icon": "icon128.png",
		"default_popup": "popup.html",
		"default_title": "Count present students"
	},

	"permissions": [
				"*://attendance.mcast.edu.mt/Home/Create*"
	],
	
	"homepage_url": "https://github.com/robert-abela/mcast-attendance-chrome-extension",
	"short_name": "MCAST attendance",
	"version_name": "Early Alpha"
}